[Unit]
Description=Update IP in AWS IoT Shadow at boot
After=network-online.target

[Service]
Restart=on-failure
RestartSec=10s
Environment="NODE_PATH=/usr/local/bin/node"
Environment="HOME=/home/pi"
WorkingDirectory=/home/pi/update-ip-in-aws-iot-shadow
ExecStartPre=/bin/sleep 1
ExecStart=/usr/local/bin/node /home/pi/update-ip-in-aws-iot-shadow/index.js

[Install]
WantedBy=multi-user.target

